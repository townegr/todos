<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="small-12 medium-6 columns">

        <%= f.text_field :first_name, placeholder: 'First Name', required: true, autofocus: true %>
      </div>
      <div class="small-12 medium-6 columns">
        <%= f.text_field :last_name, placeholder: 'Last Name', required: true %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-6 columns">
        <%= f.email_field :email, placeholder: 'Email Address', required: true %>
      </div>
      <div class="small-12 medium-6 columns">
        <%= f.text_field :username, placeholder: 'Username', required: true %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-6 columns">
        <%= f.input :password, placeholder: 'Password', required: true, label: false %>
      </div>
      <div class="small-12 medium-6 columns">
        <%= f.input :password_confirmation, placeholder: 'Password confirmation', required: true, label: false %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign Up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
